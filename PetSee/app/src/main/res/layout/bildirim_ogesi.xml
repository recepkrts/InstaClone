<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8sp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:id="@+id/profilResmi_bildirimOgesi"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/profilResmi_bildirimOgesi"
        android:layout_toStartOf="@+id/gonderiResmi_bildirimOgesi">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_kAdi_bildirimOgesi"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_yorum_bildirimOgesi"
            android:maxLines="5"
            android:textColor="#000000"/>
    </LinearLayout>
    <ImageView
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:id="@+id/gonderiResmi_bildirimOgesi"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>