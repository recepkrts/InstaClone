<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    tools:context=".MesajGonderme">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:id="@+id/appbar_top">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            android:id="@+id/toolbar">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_kAdi"
                    android:layout_toStartOf="@+id/imageKisi"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_durum"
                    android:layout_below="@+id/txt_kAdi"
                    android:layout_toStartOf="@+id/imageKisi"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/imageKisi"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:civ_border_width="10dp"
                    app:civ_border_color="#05df29"
                    android:visibility="gone"
                    android:id="@+id/img_on"
                    android:src="@mipmap/ic_launcher"
                    android:layout_below="@+id/txt_kAdi"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="-15dp"
                    android:layout_toEndOf="@id/imageKisi"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:civ_border_width="10dp"
                    app:civ_border_color="#bfbfbf"
                    android:visibility="gone"
                    android:id="@+id/img_off"
                    android:src="@mipmap/ic_launcher"
                    android:layout_below="@+id/txt_kAdi"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="-15dp"
                    android:layout_toEndOf="@id/imageKisi"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:id="@+id/recyclerview_dm"
            android:layout_below="@+id/appbar_top"
            android:layout_above="@+id/linearLayout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:weightSum="1"
        android:background="#FFFFFF"
        android:id="@+id/linearLayout">
        <ImageView
            android:id="@+id/dosya_sec"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="2dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_dosya_sec"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edt_mesaj"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Mesajınızı Girin"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"
            android:maxHeight="300dp"
            android:layout_weight="0.99"
            android:background="@android:color/transparent"/>
        <ImageView
            android:id="@+id/image_gonder"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_gonder" />
    </LinearLayout>
</RelativeLayout>